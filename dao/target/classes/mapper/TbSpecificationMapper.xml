<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bdwk.pinyougou.mapper.TbSpecificationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="base_map" type="com.bdwk.pinyougou.pojo.TbSpecification">
        <id column="id" property="id"/>
        <result column="spec_name" property="specName"/>
    </resultMap>
    <!--通用查询列-->
    <sql id="base_column">
        id,spec_name
    </sql>

    <select id="select2list" resultType="java.util.Map">
        select id,spec_name as text from tb_specification
    </select>
</mapper>